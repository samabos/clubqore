# Environment
NODE_ENV=production
HOST=0.0.0.0
PORT=3000

# Database
PG_CONNECTION_STRING=postgres://user:password@localhost:5432/clubqore_db

# JWT secrets
# IMPORTANT: Generate a secure random secret for production!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET

# Token expiration times (in seconds)
ACCESS_TOKEN_EXPIRES_IN=900                    # 15 minutes
REFRESH_TOKEN_EXPIRES_IN=604800                # 7 days
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=86400      # 24 hours
PASSWORD_RESET_TOKEN_EXPIRES_IN=3600           # 1 hour

# OAuth settings (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email configuration
EMAIL_PROVIDER=gmail                           # Options: gmail, smtp, sendgrid, development
EMAIL_HOST=smtp.gmail.com                      # For SMTP provider
EMAIL_PORT=587                                 # For SMTP provider
EMAIL_SECURE=false                             # true for port 465, false for other ports
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_API_KEY=your-sendgrid-api-key            # For SendGrid provider
EMAIL_FROM=noreply@clubqore.com
EMAIL_FROM_NAME=ClubQore

# Address Lookup Service (getAddress.io)
# Sign up at https://getaddress.io/ to get your API key
# Free tier: 20 lookups/day + 30 extra/month
# Paid plans from £3/month (50/day) to £240/month (30K/day)
GETADDRESS_API_KEY=your_getaddress_api_key

# Application URLs (HTTPS required in production)
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# Logging
LOG_LEVEL=info
SEQ_SERVER_URL=http://localhost:5341

# Super Admin Account (Service Provider)
# SECURITY NOTE: These are DEFAULT credentials for initial setup ONLY.
# You MUST change these immediately after first login!
# Generate a secure password: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
SUPER_ADMIN_EMAIL=admin@your-domain.com
SUPER_ADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY
SUPER_ADMIN_NAME=System Administrator

# ============================================
# SECURITY CHECKLIST FOR PRODUCTION DEPLOYMENT
# ============================================
# [ ] Change JWT_SECRET to a randomly generated 64+ character string
# [ ] Change SUPER_ADMIN_PASSWORD to a strong unique password
# [ ] Change SUPER_ADMIN_EMAIL to your actual admin email
# [ ] Set FRONTEND_URL and BACKEND_URL to your actual HTTPS domains
# [ ] Configure EMAIL settings for production email delivery
# [ ] Ensure PG_CONNECTION_STRING uses a strong password
# [ ] Consider enabling SSL for database connection
# [ ] Review and rotate all secrets regularly
