{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server.js",
    "test:setup": "cross-env DOTENV_CONFIG_PATH=.env.test node -r dotenv/config src/test/setup-db.js",
    "test": "npm run test:setup && cross-env NODE_ENV=test DOTENV_CONFIG_PATH=.env.test node -r dotenv/config --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "cross-env NODE_ENV=test DOTENV_CONFIG_PATH=.env.test node -r dotenv/config --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "cross-env NODE_ENV=test DOTENV_CONFIG_PATH=.env.test node -r dotenv/config --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "migrate:make": "knex migrate:make --knexfile knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.js",
    "seed:make": "knex seed:make",
    "seed:run": "knex seed:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/postgres": "^6.0.2",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "fastify": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "cross-env": "^7.0.3",
    "jest": "^30.0.5",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "maxWorkers": 1,
    "runInBand": true,
    "forceExit": true,
    "testTimeout": 15000
  }
}
